<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" />
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
        integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
        integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="/public/styles/_reset.css" />
    <link rel="stylesheet" href="/public/styles/home.css" />
    <title>Tac Stream Manager</title>
</head>

<body>
    <div id="overlay" class="flex-column justify-content-center align-items-center">
        <div class="loader">Loading...</div>
    </div>
    <main class="d-lg-flex flex-lg-column justify-content-lg-start align-items-lg-start w-100 h-50">
        <div class="d-lg-flex flex-lg-row justify-content-around align-items-center tac-container">

            <div class="d-flex flex-column justify-content-end align-items-center previewScene-container big-screen-config">
                <img id="previewScene" class="previewScene-image">
                <select class="form-select" id="scenes" onchange="changePreviewScene(this);"></select>
            </div>
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary small-screen-config" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Launch demo modal
            </button>

            <!-- Modal -->
            <div class="modal fade small-screen-config" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-content">
                    <div class="modal-body">

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                        <div class="transactionScene-container">
                            <button id="transactionScene" class=" tac_transation_button_disabled" disabled
                                    onclick="transationScene()">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-arrows-right-left"
                                     width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#F1F4F9" fill="none"
                                     stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                    <line x1="21" y1="7" x2="3" y2="7" />
                                    <path d="M18 10l3 -3l-3 -3" />
                                    <path d="M6 20l-3 -3l3 -3" />
                                    <line x1="3" y1="17" x2="21" y2="17" />
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="transactionScene-container big-screen-config">
                <button id="transactionScene" class=" tac_transation_button_disabled" disabled
                    onclick="transationScene()">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-arrows-right-left"
                        width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#F1F4F9" fill="none"
                        stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <line x1="21" y1="7" x2="3" y2="7" />
                        <path d="M18 10l3 -3l-3 -3" />
                        <path d="M6 20l-3 -3l3 -3" />
                        <line x1="3" y1="17" x2="21" y2="17" />
                    </svg>
                </button>
            </div>
            <div class="d-flex flex-column justify-content-center align-items-center currentScene-container">
                <img id="currentScene" class="currentScene-image">
            </div>
        </div>

        <div class="d-lg-flex flex-lg-row justify-content-evenly align-items-center w-100 h-50">
            <div class="d-flex flex-row justify-content-center align-items-center">
                <button id="startObs" class=" tac_transation_button_disabled" onclick="startObs()" disabled>
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-player-play" width="44"
                        height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#F1F4F9" fill="none"
                        stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M7 4v16l13 -8z" />
                    </svg>
                </button>
                <button id="stopObs" class=" tac_transation_button_disabled" onclick="stopObs()" disabled>
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-logout" width="44"
                        height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#F1F4F9" fill="none"
                        stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M14 8v-2a2 2 0 0 0 -2 -2h-7a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h7a2 2 0 0 0 2 -2v-2" />
                        <path d="M7 12h14l-3 -3m0 6l3 -3" />
                    </svg>
                </button>

                <span style="writing-mode: vertical-lr;">OBS</span>
            </div>
            <div class="d-flex flex-row justify-content-center align-items-center">
                <button id="startTransmission" class=" tac_transation_button_disabled" onclick="startTransmission()"
                    disabled>
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-player-play" width="44"
                        height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#F1F4F9" fill="none"
                        stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M7 4v16l13 -8z" />
                    </svg>
                </button>
                <button id="stopTransmission" class=" tac_transation_button_disabled" onclick="stopTransmission()"
                    disabled>
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-player-stop" width="44"
                        height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#F1F4F9" fill="none"
                        stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <rect x="5" y="5" width="14" height="14" rx="2" />
                    </svg>
                </button>
                <span style="writing-mode: vertical-lr;">STREAM</span>
            </div>
            <div class="d-flex flex-row justify-content-center align-items-center">
                <button class="tac_transation_button_disabled" onclick="startAndConnectCsGo()" disabled
                    id="startAndConnectCsGo">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-player-play" width="44"
                        height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#F1F4F9" fill="none"
                        stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M7 4v16l13 -8z" />
                    </svg>
                </button>
                <button class=" tac_transation_button_disabled" onclick="stopCsGo()" disabled id="stopCsGo">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-logout" width="44"
                        height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#F1F4F9" fill="none"
                        stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M14 8v-2a2 2 0 0 0 -2 -2h-7a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h7a2 2 0 0 0 2 -2v-2" />
                        <path d="M7 12h14l-3 -3m0 6l3 -3" />
                    </svg>
                </button>
                <span style="writing-mode: vertical-lr;">CS GO</span>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.min.js"
        integrity="sha384-lpyLfhYuitXl2zRZ5Bn2fqnhNAKOAaM/0Kr9laMspuaMiZfGmfwRNFh8HlMy49eQ"
        crossorigin="anonymous"></script>

    <script type="text/javascript" src="/public/scripts/home/eventHandler.js"></script>
    <script type="text/javascript" src="/public/scripts/home/notificationHandler.js"></script>
</body>

</html>